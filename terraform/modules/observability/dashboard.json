{
  "widgets": [
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ECS", "CPUUtilization", "ServiceName", "${service_name}", "ClusterName", "${cluster_name}", { "stat": "Average" } ],
          [ ".", "MemoryUtilization", "ServiceName", "${service_name}", "ClusterName", "${cluster_name}", { "stat": "Average" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ECS Service - CPU & Memory",
        "period": 300,
        "yAxis": {
          "left": {
            "min": 0,
            "max": 100
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "ECS/ContainerInsights", "RunningTaskCount", "ServiceName", "${service_name}", "ClusterName", "${cluster_name}", { "stat": "Average" } ],
          [ ".", "DesiredTaskCount", "ServiceName", "${service_name}", "ClusterName", "${cluster_name}", { "stat": "Average" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ECS Service - Task Count",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "RequestCount", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Sum" } ],
          [ ".", "HTTPCode_Target_2XX_Count", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Sum" } ],
          [ ".", "HTTPCode_Target_4XX_Count", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Sum" } ],
          [ ".", "HTTPCode_Target_5XX_Count", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Sum" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ALB - Request Count & Status Codes",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "TargetResponseTime", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Average" } ],
          [ "...", { "stat": "p50" } ],
          [ "...", { "stat": "p99" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ALB - Response Time",
        "period": 300,
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "HealthyHostCount", "TargetGroup", "${target_group_arn}", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Average" } ],
          [ ".", "UnHealthyHostCount", "TargetGroup", "${target_group_arn}", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Average" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ALB - Target Health",
        "period": 60
      }
    },
    {
      "type": "log",
      "properties": {
        "query": "SOURCE '${log_group_name}'\n| fields @timestamp, message, level\n| filter level = \"ERROR\"\n| sort @timestamp desc\n| limit 20",
        "region": "${region}",
        "stacked": false,
        "title": "Recent Application Errors",
        "view": "table"
      }
    }
  ]
}

{
  "widgets": [
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ECS", "CPUUtilization", { "stat": "Average", "dimensions": { "ServiceName": "${service_name}", "ClusterName": "${cluster_name}" } } ],
          [ ".", "MemoryUtilization", { ".", ".", ".", "." } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ECS Service - CPU & Memory",
        "period": 300,
        "yAxis": {
          "left": {
            "min": 0,
            "max": 100
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "ECS/ContainerInsights", "RunningTaskCount", { "stat": "Average", "dimensions": { "ServiceName": "${service_name}", "ClusterName": "${cluster_name}" } } ],
          [ ".", "DesiredTaskCount", { ".", ".", ".", "." } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ECS Service - Task Count",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "RequestCount", { "stat": "Sum", "dimensions": { "LoadBalancer": "${alb_arn_suffix}" } } ],
          [ ".", "HTTPCode_Target_2XX_Count", { ".", ".", ".", "." } ],
          [ ".", "HTTPCode_Target_4XX_Count", { ".", ".", ".", "." } ],
          [ ".", "HTTPCode_Target_5XX_Count", { ".", ".", ".", "." } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ALB - Request Count & Status Codes",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "TargetResponseTime", { "stat": "Average", "dimensions": { "LoadBalancer": "${alb_arn_suffix}" } } ],
          [ "...", { "stat": "p50" } ],
          [ "...", { "stat": "p99" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ALB - Response Time",
        "period": 300,
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "HealthyHostCount", { "stat": "Average", "dimensions": { "TargetGroup": "${target_group_arn}", "LoadBalancer": "${alb_arn_suffix}" } } ],
          [ ".", "UnHealthyHostCount", { ".", ".", ".", "." } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${region}",
        "title": "ALB - Target Health",
        "period": 60
      }
    },
    {
      "type": "log",
      "properties": {
        "query": "SOURCE '${log_group_name}'\n| fields @timestamp, message, level\n| filter level = \"ERROR\"\n| sort @timestamp desc\n| limit 20",
        "region": "${region}",
        "stacked": false,
        "title": "Recent Application Errors",
        "view": "table"
      }
    }
  ]
}
